{% extends 'base.html.twig' %}

{% block body %}
    <title>{% block title %}Player Creation{% endblock %}</title>

    <div class="container-fluid">
        <div class="card col-md-4">
            <div class="card-header">Create Player</div>

            {{ form_start(form_players) }}
            <div class="card-body">
                <div class="mb-4">
                    {{ form_row(form_players.name) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form_players.position) }}
                </div>
                <div class="mb-4">
                    {{ form_row(form_players.team) }}
                </div>

                {{ form_widget(form_players.save) }}
            </div>
            {{ form_end(form_players) }}
        </div>

    </div>
{% endblock %}